<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:paddingHorizontal="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="32dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="필터"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/btnReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="초기화"
            android:textColor="#2196F3"
            android:padding="8dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카테고리"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/categoryFilterGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipExam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="검사/검진"
            style="@style/Widget.MaterialComponents.Chip.Filter"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipSurgery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수술"
            style="@style/Widget.MaterialComponents.Chip.Filter"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipMaterials"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="치료재료"
            style="@style/Widget.MaterialComponents.Chip.Filter"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipMedicine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="약제"
            style="@style/Widget.MaterialComponents.Chip.Filter"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipInjection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주사"
            style="@style/Widget.MaterialComponents.Chip.Filter"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipCertificate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제증명"
            style="@style/Widget.MaterialComponents.Chip.Filter"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipOthers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기타"
            style="@style/Widget.MaterialComponents.Chip.Filter"/>
    </com.google.android.material.chip.ChipGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"
        android:layout_marginVertical="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정렬"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>

    <RadioGroup
        android:id="@+id/sortGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rbPriceHigh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="금액 높은 순"
            android:textSize="14sp"
            android:paddingVertical="8dp"/>

        <RadioButton
            android:id="@+id/rbPriceLow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="금액 낮은 순"
            android:textSize="14sp"
            android:paddingVertical="8dp"/>

        <RadioButton
            android:id="@+id/rbName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름 순"
            android:textSize="14sp"
            android:paddingVertical="8dp"/>
    </RadioGroup>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnApplyFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="적용"
        android:textColor="@android:color/white"
        android:padding="12dp"/>

</LinearLayout>